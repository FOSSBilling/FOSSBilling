<div class="card-body border-bottom py-3">
    <div class="d-flex">
        <div class="ms-auto text-muted">
            <div class="ms-2 d-inline-block">
                <div class="d-flex">
                    <form method="get">
                        <input type="hidden" name="_url" value="{{ request._url }}">
                        <div class="input-group input-group-flat">
                            <input class="form-control" type="search" name="search" value="{{ request.search }}" placeholder="{{ 'Enter search text...'|trans }}" aria-label="{{ 'Search'|trans }}">
                            <span class="input-group-text">
                                <a href="{{ request._url }}?show_filter=1" class="link-secondary" data-bs-toggle="tooltip" data-bs-original-title="{{ 'Search settings'|trans }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                                    </svg>
                                </a>
                            </span>
                            <button class="btn btn-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
