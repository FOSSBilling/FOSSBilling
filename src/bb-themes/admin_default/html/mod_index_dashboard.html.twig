        </div> #}
    {% endif %}

    {% if admin.system_is_allowed({ 'mod': 'stats' }) %}
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5>{{ 'Define date interval for graphs'|trans }}</h5>
                <form method="get" action="">
                    <input type="hidden" name="_url" value="{{ request._url }}">
                    <div class="input-group">
                        <input class="form-control" type="date" name="date_from" value="{% if request.date_from %}{{ request.date_from|date('Y-m-d') }}{% endif %}" placeholder="{{ now|date('Y-m-d') }}">
                        <span class="input-group-text">-</span>
                        <input class="form-control" type="date" name="date_to" value="{% if request.date_to %}{{ request.date_to|date('Y-m-d') }}{% endif %}" placeholder="{{ now|date('Y-m-d') }}">
                        <input type="submit" value="{{ 'Update graphs'|trans }}" class="btn btn-primary">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5>{{ 'Income'|trans }}</h5>
                <div id="graph-income" style="width: 100%; height: 200px;"></div>
            </div>
        </div>
    </div>

    <div class="col-sm-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="subheader">{{ 'Orders'|trans }}</div>
            </div>
            <div id="chart-orders" class="chart-sm" style="min-height: 40px;"></div>
        </div>
    </div>

    <div class="col-sm-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="subheader">{{ 'Invoices'|trans }}</div>
            </div>
            <div id="chart-invoices" class="chart-sm" style="min-height: 40px;"></div>
        </div>
    </div>

    <div class="col-sm-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="subheader">{{ 'Clients'|trans }}</div>
            </div>
            <div id="chart-clients" class="chart-sm" style="min-height: 40px;"></div>
        </div>
    </div>

    <div class="col-sm-6 col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="subheader">{{ 'Tickets'|trans }}</div>
            </div>
            <div id="chart-tickets" class="chart-sm" style="min-height: 40px;"></div>
        </div>
    </div>
    {% endif %}

    {% if admin.system_is_allowed({ 'mod': 'activity' }) %}
