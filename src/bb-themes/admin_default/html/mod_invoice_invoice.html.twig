                {{ item.title }} {% if item.quantity > 1 %} x {{ item.quantity }} {# item.unit #}{% endif %}
                {% endif %}
                </td>
                <td class="text-center">{{ mf.currency_format(item.tax, invoice.currency) }}</td>
