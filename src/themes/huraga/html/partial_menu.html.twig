<div class="offcanvas-md offcanvas-end" tabindex="-1" id="sidebarMenu">
    <div class="offcanvas-body d-md-flex flex-column overflow-y-auto">
        <ul class="nav flex-column">
            {% if settings.side_menu_dashboard %}
                <li class="nav-item offcanvas-item">
                    <a class="nav-link d-flex align-items-center gap-2" href="{{ '/'|link }}">
                        <span class="d-none d-lg-inline-flex awe-home"></span> {{ 'Dashboard'|trans }}
                    </a>
                </li>
            {% endif %}

            {% if settings.side_menu_order %}
                <li class="nav-item offcanvas-item">
                    <a class="nav-link d-flex align-items-center gap-2" href="{{ '/order'|link }}">
                        <span class="d-none d-lg-inline-flex awe-shopping-cart"></span> {{ 'Order'|trans }}
                    </a>
                </li>
            {% endif %}

            {% if settings.side_menu_support %}
                <li class="nav-item offcanvas-item">
                    <a class="nav-link d-flex align-items-center gap-2" href="{{ '/support'|link }}">
                        <span class="d-none d-lg-inline-flex awe-wrench"></span> {{ 'Support'|trans }}
                    </a>
                </li>
            {% endif %}

            {% if settings.side_menu_services %}
                <li class="nav-item offcanvas-item">
                    <a class="nav-link d-flex align-items-center gap-2" href="{{ '/order/service'|link }}">
                        <span class="d-none d-lg-inline-flex awe-cogs"></span> {{ 'Services'|trans }}
                    </a>
                </li>
            {% endif %}

            {% if settings.side_menu_invoices %}
                <li class="nav-item offcanvas-item">
                    <a class="nav-link d-flex align-items-center gap-2" href="{{ '/invoice'|link }}">
                        <span class="d-none d-lg-inline-flex awe-file-alt"></span> {{ 'Invoices'|trans }}
                    </a>
                </li>
            {% endif %}

            {% if settings.side_menu_emails %}
                <li class="nav-item offcanvas-item">
                    <a class="nav-link d-flex align-items-center gap-2" href="{{ '/email'|link }}">
                        <span class="d-none d-lg-inline-flex awe-envelope-alt"></span> {{ 'Email'|trans }}
                    </a>
                </li>
            {% endif %}

            {% if settings.side_menu_payments %}
                <li class="nav-item offcanvas-item">
                    <a class="nav-link d-flex align-items-center gap-2" href="{{ '/client/balance'|link }}">
                        <span class="d-none d-lg-inline-flex awe-credit-card"></span> {{ 'Payment history'|trans }}
                    </a>
                </li>
            {% endif %}

            {% if (guest.extension_is_on({"mod":"news"}) and settings.side_menu_news) %}
                <li class="nav-item offcanvas-item">
                    <a class="nav-link d-flex align-items-center gap-2" href="{{ '/news'|link }}">
                        <span class="d-none d-lg-inline-flex awe-edit"></span> {{ 'News'|trans }}
                    </a>
                </li>
            {% endif %}

            {% if (guest.extension_is_on({"mod":"kb"}) and settings.side_menu_kb) %}
                <li class="nav-item offcanvas-item">
                    <a class="nav-link d-flex align-items-center gap-2" href="{{ '/kb'|link }}">
                        <span class="d-none d-lg-inline-flex awe-book"></span> {{ 'Knowledge base'|trans }}
                    </a>
                </li>
            {% endif %}

            {% if settings.sidebar_balance_enabled and client %}
                <li class="pt-3 ps-3">
                    <span class="text-secondary d-block">{{ 'Account balance'|trans }}</span>
                    <h4><strong>{{ profile.balance | money(profile.currency) }}</strong></h4>
                </li>
            {% endif %}
        </ul>
    </div>
</div>
