<div class="card-body">
    <h2>{{ 'File information'|trans }}</h2>

    <table class="table card-table table-vcenter table-striped text-nowrap">
        <tbody>
            <tr class="noborder">
                <td>{{ 'Filename'|trans }}:</td>
                <td>{{ service.filename  }}</td>
            </tr>
            <tr>
                <td>{{ 'Location'|trans }}:</td>
                <td>{{ service.path }}</td>
            </tr>
            <tr>
                <td>{{ 'Downloads'|trans }}:</td>
                <td>{{ service.downloads }}</td>
            </tr>
        </tbody>
    </table>
    <hr>

    <h3>{{ 'Upload new file for this order'|trans }}</h3>
    <p class="text-muted">{{ 'Use this function to update existing order file. Client will be able to download new file from client area'|trans }}</p>

    <form method="post" action="admin/servicedownloadable/update" enctype="multipart/form-data" target="uploadframe" id="upload-form">
        <input type="hidden" name="CSRFToken" value="{{ CSRFToken }}"/>
        <div class="mb-3 row">
            <label class="form-label col-3 col-form-label">{{ 'Upload new file'|trans }}:</label>
            <div class="col">
                <input class="form-control" type="file" name="file_data" id="file_data">
            </div>
        </div>

        <input type="submit" value="{{ 'Upload'|trans }}" class="btn btn-primary submitForm" id="upload-button">

        <input type="hidden" name="order_id" value="{{ order.id }}">
    </form>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    let iframe = document.getElementById('uploadframe');
    if (!iframe) {
        iframe = document.createElement('iframe');
        iframe.id = 'uploadframe';
        iframe.name = 'uploadframe';
        iframe.style.display = 'none';
        document.body.appendChild(iframe);
    }

    const form = document.getElementById('upload-form');
    form.addEventListener('submit', function() {
        form.action = bb.restUrl('admin/servicedownloadable/upload');

        iframe.addEventListener('load', function() {
            const responseText = iframe.contentDocument?.body?.textContent || '';
            let data;
            try {
                data = JSON.parse(responseText);
            } catch (e) {
                FOSSBilling.message("Server returned non-JSON response", "error");
                return;
            }

            if (data.error) {
                bb.error(data.error.message, data.error.code);
            }

            if (data.result) {
                FOSSBilling.message("{{ 'File was uploaded'|trans }}");
            }
        });
    });
});
</script>
