<div class="card-body">
    <h5>{{ 'File'|trans }}</h5>
        <div class="row mb-3">
            <form method="post" action="{{ '/api/admin/servicedownloadable/config_save'|link }}" {{ fb_api_form({ message: 'Settings Updated'|trans}) }}>
            <label class="col-md-3 form-label">
                {{ 'Keep Orders Updated'|trans }}
            </label>
            <div class="col-md-6">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="update_orders" value="1" {% if product.config.update_orders == '1' %} checked {% endif %} {% if product.config.update_orders == '' %} checked {% endif %} required>
                    <label class="form-check-label">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="update_orders" value="0" {% if product.config.update_orders == '0' %} checked {% endif %} required>
                    <label class="form-check-label">No</label>
                </div>
            </div>
            <input type="hidden" name="id" value="{{ product.id }}">
            <input type="submit" value="{{ 'Save config'|trans }}" class="btn btn-primary w-100" id="config-save-button">
        </form>
        </div>
    <div class="row mb-3">
        <form method="post" action="" class="" enctype="multipart/form-data" target="uploadframe" id="upload-form">
            <input type="hidden" name="CSRFToken" value="{{ CSRFToken }}"/>
            {% if product.config.filename  %}
            <div class="mb-3 row">
                <label class="form-label col-3 col-form-label">{{ 'Currently uploaded file'|trans }}:</label>
                <div class="col align-content-center">
                    <a href="{{ 'servicedownloadable/get-file'|alink }}/{{ product.id }}" target="_blank">{{ product.config.filename }}</a>
                </div>
            </div>
            {% endif %}

            <div class="mb-3 row">
                <label class="form-label col-3 col-form-label">{{ 'Upload new file'|trans }}:</label>
                <div class="col">
                    <input class="form-control" type="file" name="file_data" id="file_data">
                </div>
            </div>
            <input type="hidden" name="id" value="{{ product.id }}">
            <input type="submit" value="{{ 'Upload'|trans }}" class="btn btn-primary w-100" id="file-upload-button">
        </form>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    let iframe = document.getElementById('uploadframe');
    if (!iframe) {
        iframe = document.createElement('iframe');
        iframe.id = 'uploadframe';
        iframe.name = 'uploadframe';
        iframe.style.display = 'none';
        document.body.appendChild(iframe);
    }

    const form = document.getElementById('upload-form');
    form.addEventListener('submit', function() {
        form.action = bb.restUrl('admin/servicedownloadable/upload');

        iframe.addEventListener('load', function() {
            const responseText = iframe.contentDocument?.body?.textContent || '';
            let data;
            try {
                data = JSON.parse(responseText);
            } catch (e) {
                FOSSBilling.message("Server returned non-JSON response", "error");
                return;
            }

            if (data.error) {
                bb.error(data.error.message, data.error.code);
            }

            if (data.result) {
                FOSSBilling.message("{{ 'File was uploaded'|trans }}");
            }
        });
    });
});
</script>
