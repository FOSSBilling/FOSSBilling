{% extends request.ajax ? 'layout_blank.html.twig' : 'layout_default.html.twig' %}

{% import 'macro_functions.html.twig' as mf %}

{% block meta_title %}{{ 'Widget settings'|trans }}{% endblock %}

{% set active_menu = 'system' %}

{% block breadcrumbs %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ '/'|alink }}">
                <svg class="icon">
                    <use xlink:href="#home" />
                </svg>
            </a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ 'system'|alink }}">{{ 'Settings'|trans }}</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">{{ 'Widget settings'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card-tabs">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" href="#tab-list" data-bs-toggle="tab">{{ 'Widgets'|trans }}</a>
            </li>
        </ul>

        <div class="card">
            <div class="tab-content">
                <div class="tab-pane fade active show" id="tab-list" role="tabpanel">
                    <div class="table-responsive">
                        <table class="table card-table table-vcenter table-striped text-nowrap">
                            <thead>
                            <tr>
                                <th>{{ 'Module'|trans }}</th>
                                <th>{{ 'Slot'|trans }}</th>
                                <th>{{ 'Priority'|trans }}</th>
                                <th>{{ 'Template'|trans }}</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% set widgets = admin.widgets_get_list({ 'per_page': 25 }) %}
                            {% for widget in widgets.list %}
                                <tr>
                                    <td>
                                        {{ widget.mod_name|capitalize }}
                                    </td>
                                    <td>
                                        <code>{{ widget.slot }}</code>
                                    </td>
                                    <td>
                                        {{ widget.priority }}
                                    </td>
                                    <td>
                                        <code>{{ widget.template }}</code>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        {{ include('partial_pagination.html.twig', { 'list': widgets, 'url': 'widgets' }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}