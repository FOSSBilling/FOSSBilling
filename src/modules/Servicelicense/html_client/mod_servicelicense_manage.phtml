{% if order.status == 'active' %}
<div class="row">
    <article class="span12 data-block">
        <div class="data-container">
            <header>
                <h1>{{ order.title }}</h1>
            </header>
            <section>
               <h2>{{ 'License details'|trans }}</h2>
                <table class="table table-striped table-bordered table-condensed">
                    <tbody>
                    <tr>
                        <td>{{ 'Key'|trans }}</td>
                        <td>
                            <strong>{{ service.license_key }}</strong>
                        </td>
                    </tr>

                    {% if service.validate_ip %}
                    <tr>
                        <td>
                            {{ 'Valid IPs'|trans }}
                        </td>
                        <td>
                            {% for ip in service.ips %}
                            {{ ip }} <br/>
                            {% else %}
                            {{ 'All ips'|trans }}
                            {% endfor %}
                        </td>
                    </tr>
                    {% endif %}

                    {% if service.validate_host %}
                    <tr>
                        <td>
                            {{ 'Valid Domains'|trans }}
                        </td>
                        <td>
                            {% for host in service.hosts %}
                            {{ host }} <br/>
                            {% else %}
                            {{ 'All hosts'|trans }}
                            {% endfor %}
                        </td>
                    </tr>
                    {% endif %}

                    {% if service.validate_version %}
                    <tr>
                        <td>
                            {{ 'Valid Versions'|trans }}
                        </td>
                        <td>
                            {% for version in service.versions %}
                            {{ version }} <br/>
                            {% else %}
                            {{ 'All versions'|trans }}
                            {% endfor %}
                        </td>
                    </tr>
                    {% endif %}

                    {% if service.validate_path %}
                    <tr>
                        <td>
                            {{ 'Valid Install paths'|trans }}
                        </td>
                        <td>
                            {% for path in service.paths %}
                            {{ path }} <br/>
                            {% else %}
                            {{ 'All paths'|trans }}
                            {% endfor %}
                        </td>
                    </tr>
                    {% endif %}

                    </tbody>
                </table>

                <h2>{{ 'Reset license'|trans }}</h2>
                <p>{{ 'You can reset your license parameters if you have changed your server'|trans }}</p>
                <div class="block">
                    <p><button class="btn btn-primary" type="button" id="license-reset">{{ 'Reset'|trans }}</button></p>
                </div>
            </section>
        </div>
    </article>
</div>

<script type="text/javascript">
$(function() {
    $('#license-reset').bind('click',function(event) {
        event.preventDefault();

        if (confirm("{{ 'Are you sure?'|trans }}")) {
            bb.post(
                'client/servicelicense/reset',
                { order_id: {{ order.id }} },
                function(result) {
                    bb.msg('License was reset');
                }
            );
        }
    });
});
</script>
{% endif %}
