{% extends "layout_default.html.twig" %}

{% block meta_title %}{{ 'Privacy Policy'|trans }}{% endblock %}

{% set company = guest.system_company %}

{% block body_class %}privacy-policy{% endblock %}
{% block breadcrumb %}
    <li class="breadcrumb-item active" aria-current="page">{{ 'Privacy'|trans }}</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header py-3 py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">{{ company.name }} {{ 'Privacy Policy'|trans }}</h5>
                            <span class="small text-muted">
                                {{ company.signature }}
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p>{{ company.privacy_policy|markdown }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
