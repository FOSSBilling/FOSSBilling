{% extends "layout_default.html.twig" %}

{% block meta_title %}{{ 'About us'|trans }}{% endblock %}

{% set company = guest.system_company %}

{% block body_class %}about-us{% endblock %}
{% block breadcrumb %}
    <li class="breadcrumb-item active" aria-current="page">{{ 'About'|trans }}</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4 bg-white">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5>{{ 'About us'|trans }}</h5>
                            <span class="ml-2 mt-1 small text-muted">
                                {{ company.signature }}
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p>{{ company.note|markdown }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
