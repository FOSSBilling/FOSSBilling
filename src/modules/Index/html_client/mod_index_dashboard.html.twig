{% extends request.ajax ? "layout_blank.html.twig" : "layout_default.html.twig" %}

{% block meta_title %}{{ 'Client Area'|trans }}{% endblock %}
{% block page_header %}{{ 'Dashboard'|trans }}{% endblock %}

{% block body_class %}dashboard{% endblock %}
{% block breadcrumbs %}
    {% if not settings.hide_dashboard_breadcrumb %}
        <ul class="breadcrumb">
            <li><a href="{{ '/'|link }}">{{ 'Home'|trans }}</a> <span class="dropdown-divider">/</span></li>
            <li class="active">{{ 'Dashboard'|trans }}</li>
        </ul>
    {% endif %}
{% endblock %}

{% import "macro_functions.html.twig" as mf %}

{% block content %}
    {% if settings.showcase_enabled %}
        <div class="alert alert-info" role="alert">
            <p>{{ settings.showcase_text |markdown }}</p>

            {% if (settings.showcase_button_url) and (settings.showcase_button_title) %}
                <a class="btn btn-sm btn-primary btn-large"
                   href="{{ settings.showcase_button_url }}">{{ settings.showcase_button_title }}</a>
            {% endif %}
        </div>
    {% endif %}

    {% if client %}
        {% set dashboard = client.index_get_dashboard %}
        {% set profile = dashboard.profile %}

        {% if dashboard.tickets.on_hold > 0 %}
            <div class="row">
                <div class="col-md-12">
                    {% for i, ticket in dashboard.recent_tickets %}
                        {% if ticket.status == 'on_hold' %}
                            <div class="alert alert-info d-flex flex-column" role="alert">
                                <span class="mb-2">Ticket <strong>#{{ ticket.id }}</strong> was replied to {{ ticket.updated_at|timeago }} {{ 'ago'|trans }}.</span>
                                <a href="{{ 'support/ticket'|link }}/{{ ticket.id }}" class="alert-link">{{ 'Reply'|trans }}</a>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        <div>
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="m-0 pt-1">{{ 'Profile'|trans }}</h6>
                            <div class="py-2">
                                <a class="btn btn-sm btn-dark"
                                   href="{{ 'client/profile'|link }}">{{ 'Update'|trans }}</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <dt class="col-sm-4 text-muted small fw-normal">{{ 'Client ID'|trans }}</dt>
                                <dd class="col-sm-8">#{{ profile.id }}</dd>
                                <dt class="col-sm-4 text-muted small fw-normal">{{ 'Email'|trans }}</dt>
                                <dd class="col-sm-8">{{ profile.email }}</dd>
                                <dt class="col-sm-4 text-muted small fw-normal">{{ 'Balance'|trans }}</dt>
                                <dd class="col-sm-8">{{ profile.balance | money(profile.currency) }}</dd>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="m-0 pt-1">{{ 'Invoices'|trans }}</h6>
                            <div class="py-2">
                                <a class="btn btn-sm btn-dark"
                                   href="{{ 'invoice'|link }}">{{ 'All Invoices'|trans }}</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <dt class="col-sm-4 text-muted small fw-normal">{{ 'Total'|trans }}</dt>
                                <dd class="col-sm-8">{{ dashboard.invoices.total }}</dd>
                                <dt class="col-sm-4 text-muted small fw-normal">{{ 'Paid'|trans }}</dt>
                                <dd class="col-sm-8">{{ dashboard.invoices.paid }}</dd>
                                <dt class="col-sm-4 text-muted small fw-normal">{{ 'Unpaid'|trans }}</dt>
                                <dd class="col-sm-8">{{ dashboard.invoices.unpaid }}</dd>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="m-0 pt-1">{{ 'Orders'|trans }}</h6>
                            <div class="py-2">
                                <a class="btn btn-sm btn-primary order-button"
                                   href="{{ 'order'|link }}">{{ 'New Order'|trans }}</a>
                                <a class="btn btn-sm btn-dark"
                                   href="{{ 'order/service'|link }}">{{ 'All Orders'|trans }}</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <dt class="col-sm-4 text-muted small fw-normal">{{ 'Total'|trans }}</dt>
                                <dd class="col-sm-8">{{ dashboard.orders.total }}</dd>
                                <dt class="col-sm-4 text-muted small fw-normal">{{ 'Active'|trans }}</dt>
                                <dd class="col-sm-8">{{ dashboard.orders.active }}</dd>
                                <dt class="col-sm-4 text-muted small fw-normal">{{ 'Expiring'|trans }}</dt>
                                <dd class="col-sm-8">{{ dashboard.orders.expiring }}</dd>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="m-0 pt-1">{{ 'Tickets'|trans }}</h6>
                            <div class="py-2">
                                <a class="btn btn-sm btn-primary"
                                   href="{{ 'support'|link({ 'ticket': 1 }) }}">{{ 'New Ticket'|trans }}</a>
                                <a class="btn btn-sm btn-dark" href="{{ 'support'|link }}">{{ 'All Tickets'|trans }}</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <dt class="col-sm-4 text-muted small fw-normal">{{ 'Total'|trans }}</dt>
                                <dd class="col-sm-8">{{ dashboard.tickets.total }}</dd>
                                <dt class="col-sm-4 text-muted small fw-normal">{{ 'Open'|trans }}</dt>
                                <dd class="col-sm-8">{{ dashboard.tickets.open }}</dd>
                                <dt class="col-sm-4 text-muted small fw-normal">{{ 'On Hold'|trans }}</dt>
                                <dd class="col-sm-8">{{ dashboard.tickets.on_hold }}</dd>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 pt-1">{{ 'Recent Orders'|trans }}</h6>
                        </div>
                        <div class="card-body p-1">
                            {% if dashboard.recent_orders %}
                                <div class="list-group list-group-flush">
                                    {% for i, order in dashboard.recent_orders %}
                                        <a href="{{ 'order/service/manage'|link }}/{{ order.id }}"
                                           class="list-group-item d-flex justify-content-between align-items-center" aria-current="true">
                                            <div>
                                                <div>
                                                    <span><strong>#{{ order.id }}</strong></span>&nbsp;<span>{{ order.title|truncate(45) }}</span>
                                                </div>
                                                <span class="text-secondary small" title="{{ order.updated_at|format_date }}">{{ order.updated_at|timeago }} {{ 'ago'|trans }}</span>
                                            </div>
                                            <div>
                                                <span class="badge {% if order.status == 'active' %}text-bg-success{% elseif order.status == 'pending_setup' %}text-bg-warning{% elseif order.status == 'failed_setup' or order.status == 'suspended' or order.status == 'failed_renew' %}text-bg-danger{% elseif order.status == 'canceled' %}text-bg-secondary{% endif %}">{{ mf.status_name(order.status) }}</span>
                                            </div>
                                        </a>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <div class="d-flex justify-content-center my-2 p-2">
                                    <span class="m-0">{{ 'No recent orders'|trans }}</span>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 pt-1">{{ 'Support Tickets'|trans }}</h6>
                        </div>
                        <div class="card-body p-1">
                            {% if dashboard.recent_tickets %}
                                <div class="list-group list-group-flush">
                                    {% for i, ticket in dashboard.recent_tickets %}
                                        <a href="{{ 'support/ticket'|link }}/{{ ticket.id }}"
                                           class="list-group-item d-flex justify-content-between align-items-center" aria-current="true">
                                            <div>
                                                <div>
                                                    <span><strong>#{{ ticket.id }}</strong></span>&nbsp;<span>{{ ticket.subject|truncate(45) }}</span>
                                                </div>
                                                <span class="text-secondary small" title="{{ ticket.updated_at|format_date }}">{{ ticket.updated_at|timeago }} {{ 'ago'|trans }}</span>
                                            </div>
                                            <div>
                                                <span class="badge {% if ticket.status == 'open' %}text-bg-success{% elseif ticket.status == 'on_hold' %}text-bg-warning{% elseif ticket.status == 'closed' %}text-bg-secondary{% endif %}">{{ mf.status_name(ticket.status) }}</span>
                                            </div>
                                        </a>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <div class="d-flex justify-content-center my-2 p-2">
                                    <span class="m-0">{{ 'No recent support tickets'|trans }}</span>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header h6 py-3">{{ 'Profile'|trans }}</div>
                        <div class="card-body">
                            <p>{{ 'You are currently logged out'|trans }}</p>
                            <div class="d-flex gap-2">
                                <a class="btn btn-primary" href="{{ '/login'|link }}">{{ 'Login'|trans }}</a>
                                <a class="btn btn-dark" href="{{ '/signup'|link }}">{{ 'Register'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header h6 py-3">{{ 'Order'|trans }}</div>
                        <div class="card-body">
                            <p>{{ 'Order new products and services'|trans }}</p>
                            <div class="d-flex gap-2">
                                <a class="btn btn-dark" href="{{ '/order'|link }}">{{ 'Order'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>

            {% if guest.extension_is_on({"mod":"news"}) %}
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header h6 py-3">{{ 'News'|trans }}</div>
                        <div class="card-body">
                            <p>{{ 'Latest news and announcements' | trans }}</p>
                            <div class="d-flex gap-2">
                                <a class="btn btn-dark" href="{{ '/news'|link }}">{{ 'Announcements'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if guest.support_kb_enabled() %}
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-header h6 py-3">{{ 'Knowledge Base'|trans }}</div>
                        <div class="card-body">
                            <p>{{ 'Find answers to frequent questions' | trans }}</p>
                            <div class="d-flex gap-2">
                                <a class="btn btn-dark" href="{{ '/support/kb'|link }}">{{ 'Knowledge Base'|trans }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}
