<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <style type="text/css">
        body { margin: 0; }
        form {
            border: 1px solid #D1D1D1;
        }
        fieldset {
            border: 0px;
        }
        legend {
            padding-top: 15px;
        }
        p {
            margin-top: 0px;
        }
        textarea, select, input {
            border: 1px solid #D1D1D1;
            padding: 5px;
            -webkit-border-radius: 2px;
            -moz-border-radius: 2px;
            border-radius: 2px;
            background-color: white;
        }
    </style>
</head>

<body>
<form action="" method="post" id="client-login">
    <input type="hidden" name="CSRFToken" value="{{ CSRFToken }}"/>
    <fieldset>
        <legend>Login to client area</legend>
        <p>
            <input type="email" name="email" value="" required="required" placeholder="Your email">
        </p>
        <p>
            <input type="password" name="password" value="" required="required" placeholder="Your password">
        </p>
        <input type="submit" value="Login">
    </fieldset>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        document.getElementById('client-login').addEventListener('submit', function(event) {
            event.preventDefault();

            const formData = new FormData(this);
            const formDataEncoded = new URLSearchParams(formData).toString();

            fetch("{{ constant('SYSTEM_URL') }}api/guest/client/login", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: formDataEncoded
            })
            .then(response => response.json())
            .then(json => {
                if(json.error) {
                    alert(json.error.message);
                } else {
                    parent.window.location = "{{ constant('SYSTEM_URL') }}";
                }
            })
            .catch(error => console.error('Error:', error));
        });
    });
</script>
</body>
</html>
