{% extends request.ajax ? "layout_blank.html.twig" : "layout_default.html.twig" %}

{% import "macro_functions.html.twig" as mf %}

{% block meta_title %}{{ 'Order'|trans }}{% endblock %}

{% set loader_nr = request.loader | default("8")%}
{% set loader_url = ('img/assets/loaders/loader'~loader_nr~'.gif') %}

{% block body_class %}order-index{% endblock %}
{% block breadcrumb %}
    <li class="active breadcrumb-item" aria-current="page">{{ 'Order'|trans }}</li>
{% endblock %}
{% block content_before %}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4 bg-white">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5>{{ 'Order Product'|trans }}</h5>
                            <span
                                class="ml-2 mt-1 small text-muted">{{ 'Choose products we offer for selling'|trans }}</span>
                        </div>
                    </div>
                </div>
                <div class="card-body overflow-hidden">
                    {% include 'mod_orderbutton_index.html.twig' %}
{#                    <img id="loader-image" src="{{ loader_url | mod_asset_url('orderbutton') }}"#}
{#                         style="display: block; margin-left: auto; margin-right: auto; position: relative; top: 50%"/>#}
{#                    <iframe class="w-100 border-0" allowtransparency="true" onload='resizeIframe(this);' id="popup-iframe"#}
{#                            src="{{ "orderbutton" | link }}&theme_color={{ settings.color_scheme | default('green') }}{% if request.product_id %}&order={{ request.product_id }}{% endif %}{% if request.show_custom_form_values %}&show_custom_form_values=1{% endif %}&loader=3"></iframe>#}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block sidebar2 %}
    {% include 'partial_currency.html.twig' %}
{% endblock %}

{% block js %}
{% autoescape "js" %}
<script type="text/javascript">
    function resizeIframe(obj) {
        obj.style.height = obj.contentWindow.document.documentElement.scrollHeight + 'px';
        $('#loader-image').hide();
    }
</script>
{% endautoescape %}
{% endblock %}
