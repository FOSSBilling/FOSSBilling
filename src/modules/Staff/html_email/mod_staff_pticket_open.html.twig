{% block subject %}[{{ guest.system_company.name }}] {{ ticket.subject }}{% endblock %}
{% block content %}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<style type="text/css">
		body {
			font-family: Arial, sans-serif;
			font-size: 14px;
			color: #333333;
		}

		h1 {
			font-size: 24px;
			font-weight: bold;
			margin: 0 0 20px;
		}

		p {
			margin: 0 0 10px;
		}

		strong {
			font-weight: bold;
		}

		.signature {
			font-style: italic;
			color: #999999;
			margin-top: 20px;
			border-top: 1px solid #cccccc;
			padding-top: 10px;
		}
	</style>
</head>
<body>
	<h1>Ticket opened</h1>
	<p>Hello {{ c.name }},</p>
    <p>New public ticket received.</p>
	<a href="{{'support/public-ticket'|alink }}/{{ ticket.id }}" target="_blank">Reply here.</a>
    <p>Track the conversation <a href="{{'support/contact-us/conversation'|link }}/{{ ticket.hash }}" target="_blank">here.</a></p>

    <p>You may <a href="{{'admin/staff/login'|link({'email' : c.email }) }}" target="_blank">login</a> or <a href="{{'admin/staff/profile'|link}}" target="_blank">edit your profile.</a>

	<p class="signature">{{ guest.system_company.signature }}</p>
</body>
</html>
{% endblock %}