                _this.loaderImageElem.style.display = 'none';
            }
            this.style.height = '80%';
            updatePosition();
            this.style.display = 'block';
        });

        // Resize event handler
        window.addEventListener('resize', updatePosition);
    };

    orderbutton.prototype.createBackground = function() {
        var _this = this;

        // Create background div element
        this.backgroundElem = document.createElement('div');
        this.backgroundElem.id = 'popup-background';

        // Apply styles
        var styles = {
            display: 'none',
            position: 'fixed',
            top: '0',
            left: '0',
            width: '100%',
            height: '100%',
            backgroundColor: '{{background_color}}',
            opacity: '{{background_opacity/100}}',
            WebkitOpacity: '{{background_opacity/100}}',
            MozOpacity: '{{background_opacity/100}}',
            filter: 'alpha(opacity={{background_opacity}})',
            zIndex: '1000'
        };

        // Apply all styles to the element
        Object.assign(this.backgroundElem.style, styles);

        // Add click event listener
        this.backgroundElem.addEventListener('click', function() {
            _this.hideElements();
        });

        // Append to body
        document.body.appendChild(this.backgroundElem);

        // Add show/hide methods to maintain compatibility with existing code
        this.backgroundElem.show = function() {
            this.style.display = 'block';
        };

        this.backgroundElem.hide = function() {
            this.style.display = 'none';
        };


        this.backgroundElem.show();
    };

    orderbutton.prototype.createLoaderImage = function() {
        // Create the image element using vanilla JS
        var img = document.createElement('img');
        img.src = "{{ loader_url | mod_asset_url('orderbutton')}}";
        img.id = 'loader-image';
        img.style.display = 'block';
        img.style.marginLeft = 'auto';
        img.style.marginRight = 'auto';
        img.style.position = 'relative';
        img.style.top = '50%';

        // Add a show method to maintain compatibility with existing code
        img.show = function() {
            this.style.display = 'block';
        };

        // Store the image element
        this.loaderImageElem = img;

        // Append to background element (jQuery object)
        this.backgroundElem.append(img);
    };

    orderbutton.prototype.popup = function (){
        if (this.backgroundElem && this.iframeElem){
            if (this.iframeElem.attr('src') != this.srclink()){
                this.iframeElem.attr('src', this.srclink());
                this.loaderImageElem.show();
            }
            else{
                this.iframeElem.show();
            }
            this.backgroundElem.show();

        } else{
            this.createBackground();
            this.createLoaderImage();
            this.createIframe();
        }
    };
