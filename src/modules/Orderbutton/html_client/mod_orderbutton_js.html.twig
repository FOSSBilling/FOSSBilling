        // Define position update function
        const _this = this;
        const updatePosition = function() {
            const pWidth = window.innerWidth;
            const pTop = window.pageYOffset || document.documentElement.scrollTop;
            const eWidth = _this.iframeElem.offsetWidth;
            _this.iframeElem.style.top = (pTop + 100) + 'px';
            _this.iframeElem.style.left = (Math.floor((pWidth / 2) - (eWidth / 2))) + 'px';
        };

        // Load event handler
        this.iframeElem.addEventListener('load', function() {
