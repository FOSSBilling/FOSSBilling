{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:daily",
    ":automergeBranch",
    ":automergeDigest",
    ":automergeLinters",
    ":automergePatch",
    ":automergeRequireAllStatusChecks",
    ":automergeTesters",
    ":maintainLockFilesWeekly",
    ":rebaseStalePrs"
  ],
  "automergeSchedule": ["at any time"],
  "automergeStrategy": "squash",
  "constraints": {
    "php": "~8.1.*"
  },
  "packageRules": [
    {
      "groupName": "CKEditor",
      "matchPackagePrefixes": ["@ckeditor/"],
      "rangeStrategy": "auto"
    }
  ]
}
